<div class="container">
	<div class="row">
		<div class="col-sm-12">			
			<h1>Listado Posts</h1>
			<div class="text-right">
				  <%= link_to "Nuevo Post", new_post_path, class: "btn btn-primary" %>
			</div
			<% @posts.each do |p| %>
				<div class="col-sm-12">
					<h1><%= link_to p.title, p %></h1>
					<p><%= p.updated_at.strftime("%Y-%m-%d") %></p>
					<h3><%= p.body  %></h3>
					<h4><%= link_to "Editar", edit_post_path(p) %>   <%= link_to 'Eliminar',  p,  method: :delete, data: { confirm: 'Are you sure?' } %></h4>

				</div>
			<% end %>
		</div>
	</div>
</div>


