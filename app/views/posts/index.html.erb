<div class="container">
	<div class="row">
		<div class="col-sm-12">			
			<h1>Listado Posts</h1>


			<% if signed_in? %>
			<div class="text-right">
				  <%= link_to "Nuevo Post", new_post_path, class: "btn btn-primary" %>
			</div>
			<% end %>
			
			
				<% @posts.each do |p| %>
					<div class="jumbotron">
						<h2><%= link_to p.title, p %></h1>
						<p><%= p.updated_at.strftime("%Y-%m-%d") %></p>
						<h4><%= p.body  %></h3>
						<% if signed_in? %>
						<h6><%= link_to "Editar", edit_post_path(p) %>   <%= link_to 'Eliminar',  p,  method: :delete, data: { confirm: 'Â¿Esta seguro de eliminar el post?' } %></h4>
						<% end %>
					</div>
				<% end %>
		
			
		</div>
	</div>
</div>


